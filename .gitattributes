# Asegurar finales de línea consistentes
* text=auto

# Archivos PHP
*.php text eol=lf

# Archivos de configuración
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
.env.example text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Archivos de documentación
*.md text eol=lf
*.txt text eol=lf

# Archivos web
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Archivos SQL
*.sql text eol=lf

# Archivos binarios
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.mp3 binary
*.wav binary
