# Configuración de la Aplicación Bahia Under
# Copiar este archivo como .env en la raíz del proyecto y configurar los valores apropiados

# ============================================
# ENTORNO Y DEBUGGING
# ============================================
# Valores: development, staging, production
APP_ENV=development

# Habilitar debugging (true/false)
APP_DEBUG=true

# URL base de la aplicación
APP_URL=http://localhost

# Zona horaria
APP_TIMEZONE=America/Argentina/Buenos_Aires

# ============================================
# BASE DE DATOS
# ============================================
# Host de la base de datos (localhost, 127.0.0.1, o IP remota)
DB_HOST=localhost

# Nombre de la base de datos
DB_NAME=bahia_under

# Usuario de la base de datos
DB_USER=root

# Contraseña de la base de datos (vacío para XAMPP local)
DB_PASS=

# Charset de la base de datos
DB_CHAR=utf8mb4

# ============================================
# SEGURIDAD Y ENCRIPTACIÓN
# ============================================
# Clave de aplicación (generar con: php -r "echo bin2hex(random_bytes(32));")
# IMPORTANTE: Cambiar en producción
APP_KEY=

# Clave de encriptación (generar con: php -r "echo bin2hex(random_bytes(32));")
# IMPORTANTE: Cambiar en producción
ENCRYPTION_KEY=

# Forzar HTTPS (true/false)
FORCE_HTTPS=false

# Habilitar Content Security Policy (true/false)
CSP_ENABLED=true

# Habilitar HSTS (true/false - solo con HTTPS)
HSTS_ENABLED=false

# ============================================
# SESIONES
# ============================================
# Tiempo de vida de la sesión en segundos (0 = hasta cerrar navegador)
SESSION_LIFETIME=0

# Sesión segura - solo HTTPS (true/false)
SESSION_SECURE=false

# HttpOnly cookies (true/false - recomendado: true)
SESSION_HTTPONLY=true

# SameSite policy (Strict, Lax, None)
SESSION_SAMESITE=Lax

# ============================================
# LOGGING
# ============================================
# Nivel de log: debug, info, warning, error, critical
LOG_LEVEL=info

# Canal de log: file, syslog, database
LOG_CHANNEL=file

# ============================================
# SUBIDA DE ARCHIVOS
# ============================================
# Tamaño máximo de subida en bytes (5242880 = 5MB)
UPLOAD_MAX_SIZE=5242880

# Tipos de archivo permitidos (separados por coma)
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,mp3,wav,flac

# ============================================
# RATE LIMITING
# ============================================
# Habilitar rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Número máximo de intentos
RATE_LIMIT_MAX_ATTEMPTS=10

# Ventana de tiempo en segundos (300 = 5 minutos)
RATE_LIMIT_WINDOW=300

# ============================================
# BASE DE DATOS CON SSL (Opcional)
# ============================================
# Habilitar SSL para conexión a BD (true/false)
DB_SSL=false

# Ruta al certificado CA (solo si DB_SSL=true)
DB_SSL_CA=

# Ruta al certificado del cliente (solo si DB_SSL=true)
DB_SSL_CERT=

# Ruta a la clave del cliente (solo si DB_SSL=true)
DB_SSL_KEY=

# ============================================
# BACKUP (Opcional)
# ============================================
# Habilitar backups automáticos (true/false)
BACKUP_ENABLED=false

# Días de retención de backups
BACKUP_RETENTION_DAYS=30

# ============================================
# MONITOREO (Opcional)
# ============================================
# Habilitar monitoreo (true/false)
MONITORING_ENABLED=false

# Endpoint de monitoreo (URL para enviar métricas)
MONITORING_ENDPOINT=

# ============================================
# DESARROLLO LOCAL (XAMPP)
# ============================================
# Para desarrollo local con XAMPP, la configuración mínima es:
# DB_HOST=localhost
# DB_NAME=bahia_under
# DB_USER=root
# DB_PASS=
# APP_ENV=development
# APP_DEBUG=true

# ============================================
# PRODUCCIÓN
# ============================================
# Para producción, DEBES configurar:
# - APP_ENV=production
# - APP_DEBUG=false
# - APP_KEY y ENCRYPTION_KEY únicos
# - DB_PASS con contraseña segura
# - FORCE_HTTPS=true
# - SESSION_SECURE=true
# - HSTS_ENABLED=true
